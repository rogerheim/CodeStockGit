<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tweet_background"
        >

    <ImageView
        android:id="@+id/twitter_avatar"
        android:layout_width="47px"
        android:layout_height="65px"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
            />

    <TextView
        android:id="@+id/twitter_screenname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/twitter_avatar"
        android:layout_alignTop="@id/twitter_avatar"
        android:text="ScreenName"
        android:textColor="@color/DarkSlateGray75Pct"
        android:textStyle="bold"
        android:textSize="14sp"
            />

    <TextView
        android:id="@+id/tweet_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/twitter_avatar"
        android:layout_below="@id/twitter_screenname"
        android:layout_alignLeft="@id/twitter_screenname"
        android:text="Tweet text goes here and will be linkified"
        android:textColor="@color/DarkSlateGray75Pct"
        android:textSize="12sp"
            />

    <TextView
        android:id="@+id/tweet_createdat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/twitter_avatar"
        android:layout_below="@id/tweet_text"
        android:layout_alignLeft="@id/tweet_text"
        android:text="##-##-#### ##:##am"
        android:textColor="@color/DeepSkyBlue75Pct"
        android:textSize="10sp"
        />
    
</RelativeLayout>