<!-- Layout for the app entry screen in PORTRAIT mode-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/White"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<RelativeLayout
		android:background="@color/DodgerBlue"
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		>
		
		<TextView
			android:id="@+id/header_title"
			android:textColor="@color/White"
			android:text="@string/header_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="3dp"
			android:textSize="18sp"/>
		<TextView
			android:textColor="@color/White"
			android:text="@string/header_slogan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/header_title"
			android:layout_below="@id/header_title"/>
			
			
	</RelativeLayout>
		  

	<TableLayout
		android:background="@color/White"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="0px"
		android:layout_marginTop="25dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:scrollbars="vertical"
		>
		
		<TableRow
			android:orientation="horizontal"
			android:gravity="center_horizontal"
			>
			<ImageButton
				android:id="@+id/schedule_imagebutton"
				android:src="@drawable/schedule_icon"
				android:background="@color/White"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="20dp"
				/>
			<ImageButton
				android:id="@+id/map_imagebutton"
				android:src="@drawable/map_icon"
				android:background="@color/White"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginLeft="20dp"
				/>
		</TableRow>
		
		<TableRow
			android:layout_marginTop="25dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal"
			>
			<ImageButton
				android:id="@+id/sessions_imagebutton"
				android:src="@drawable/sessions_icon"
				android:background="@color/White"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="20dp"
				/>
			<ImageButton
				android:id="@+id/starred_imagebutton"
				android:src="@drawable/starred_icon"
				android:background="@color/White"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginLeft="20dp"
				/>
		</TableRow>
		
		<TableRow
			android:layout_marginTop="25dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal"
			>
			<ImageButton
				android:id="@+id/credits_imagebutton"
				android:src="@drawable/credits_icon"
				android:background="@color/White"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginLeft="10dp"
				/>
		</TableRow>
	</TableLayout>
	
	<!-- Footer  -->
	<RelativeLayout
		android:orientation="horizontal"
		android:background="@color/DodgerBlue"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		>

		<ImageView
			android:id="@+id/footer_logo"
			android:src="@drawable/codestock_lowres_small"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"/>

		<ImageView
			android:src="@drawable/nerdetteskull_2010_lowres_small"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
			android:layout_marginTop="3dp"
			/>

	</RelativeLayout>		
</LinearLayout>
